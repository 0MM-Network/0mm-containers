FROM docker.io/ubuntu:latest

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    python3 \
    python3-venv \
    python3-pip \
    groff \
    less \
    unzip \
    curl \
    ca-certificates \
    jq \
    git \
    openssh-client \
    nodejs \
    npm \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create AWS user
RUN useradd -m -s /bin/bash -u 1001 aws && \
    mkdir -p /home/aws/.aws && \
    chown -R aws:aws /home/aws

# Install AWS CLI v2
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" && \
    unzip awscliv2.zip && \
    ./aws/install && \
    rm -rf aws awscliv2.zip

# Install AWS SAM CLI
RUN python3 -m venv /home/aws/.venv && \
    . /home/aws/.venv/bin/activate && \
    python3 -m pip install --upgrade pip && \
    python3 -m pip install --no-cache-dir --upgrade setuptools wheel && \
    python3 -m pip install --no-cache-dir aws-sam-cli

ENV PATH="/home/aws/.venv/bin:$PATH"

# Install AWS CDK
RUN npm install -g aws-cdk

# Install session manager plugin
RUN curl "https://s3.amazonaws.com/session-manager-downloads/plugin/latest/ubuntu_64bit/session-manager-plugin.deb" -o "session-manager-plugin.deb" && \
    dpkg -i session-manager-plugin.deb && \
    rm session-manager-plugin.deb

# Install additional tools
RUN . /home/aws/.venv/bin/activate && \
    python3 -m pip install --no-cache-dir \
    boto3 \
    botocore \
    awscli-local \
    cfn-lint

# Make virtual environment accessible to aws user
RUN chown -R aws:aws /home/aws/.venv

# Set up working directory
WORKDIR /aws

# Switch to aws user
USER aws

# Update PATH in aws user's profile
RUN echo 'export PATH="/home/aws/.venv/bin:$PATH"' >> ~/.bashrc

# Verify tools installation
RUN aws --version && \
    sam --version && \
    cdk --version

# Set default command
ENTRYPOINT ["sh", "-c", "exec \"$@\"", "--"]
CMD ["aws", "--version"]
